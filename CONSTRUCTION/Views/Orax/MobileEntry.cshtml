
@{
    ViewBag.Title = "Mobile Entry";
    Layout = "~/Views/Shared/_LayoutOrax.cshtml"; //null; //
}


<script src="~/Scripts/jquery-3.6.0.js"></script>


<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">

            <div class="card card-info card-outline">
                <div class="card-body">

                    <div class="row">

                        <div class="col-6 col-md-1">
                            <select id="ddlYear" class="form-control form-control-sm month-width"><option value="0">---</option> <option value="2024">24</option> <option selected="selected" value="2025">25</option>  </select>
                        </div>

                        <div class="col-6 col-md-2">
                            <select id="ddlMonth" class="form-control form-control-sm"><option>-- select --</option> <option value="all">all</option> <option value="1">January</option> <option value="2">February</option> <option value="3">March</option> <option value="4">April</option> <option value="5">May</option>  <option value="6">June</option> <option value="7">July</option>  <option value="8">August</option><option value="9">September</option> <option value="10">October</option> <option value="11">November</option> <option value="12">December</option>  </select>
                        </div>
                        <div class="col-6 col-md-2">
                            <input id="createdDate" type="date" class="form-control form-control-sm" />
                        </div>
                        <div class="col-4 col-md-2">
                            <input id="inputPrice" type="number" class="form-control form-control-sm" />
                        </div>
                        <div class="col-8 col-md-3">
                            <input id="inputDetails" type="text" class="form-control form-control-sm" />
                        </div>

                        <div class="col-12 col-md-1">
                            <input type="button" id="btnSubmit" value="Save" class="btn btn-sm btn-primary width-100" />

                        </div>

                    </div>

                    <div class="row" style="height:61vh;overflow-y:scroll;flex-direction: column-reverse;">
                        <table id="expMobList" class="" border="1" style="width: 100%;"> </table>
                    </div>

                </div>
            </div>

        </div>
    </section>
</div>


<link href="~/Content/application-css/mobileEntry.css" rel="stylesheet" />
<script src="~/Scripts/application-js/mobileEntry.js"></script>

