<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/theme/img/images.png">
    <link href="~/theme/adminlte.css" rel="stylesheet" />
    <link href="~/theme/customeCss.css" rel="stylesheet" />

    <link href="~/theme/fontawesome.css" rel="stylesheet" />
    <script src="~/theme/fontawesome.js"></script>

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <link href="~/Content/application-css/loader.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            //console.clear();
            $(document).ajaxStart(function () {
                $("#overlay").fadeIn(300);
            });
            $(document).ajaxStop(function () {
                $("#overlay").fadeOut(300);
            });



            $("#btnLogout").click(function () {

                var msg = confirm("Do you want to logout ??")
                if (msg == true) {
                    window.location.href = '/Login/Login';
                }

            });

        });
    </script>

</head>
<body class="hold-transition sidebar-mini" style="font-family:'Times New Roman';font-size:13px">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <span style="margin-left: 39%; font-size: 14px; font-weight: bolder;">@ViewBag.pageInfo</span>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">

                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="/Login/Logout">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span id="btnLogout" class="dropdown-item dropdown-header text-red">Logout</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                        </a>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        @*left side menu*@
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/Product/Index" class="brand-link">
                <img src="~/theme/img/images.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light" style="color: #d0cb7d">Billing Tracer</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @{
                            if (Session["finance"] != null)
                            {
                                <li class="nav-item"> <a href="/Orax/Entry" class="nav-link"> <i class="nav-icon fa-solid fa-mobile"></i> <p> Entry</p> </a> </li>
                                <li class="nav-item"> <a href="/Orax/Graph" class="nav-link"> <i class="nav-icon fa-solid fa-mobile"></i> <p> Graph</p> </a> </li>
                                <li class="nav-item"> <a href="/Orax/GraphColumn" class="nav-link"> <i class="nav-icon fa-solid fa-mobile"></i> <p> GraphColumn</p> </a> </li>
                                <li class="nav-item"> <a href="/Orax/MobileEntry" class="nav-link"> <i class="nav-icon fa-solid fa-mobile"></i> <p> MobileEntry</p> </a> </li>
                                <li class="nav-item"> <a href="/Orax/SalaryEntry" class="nav-link"> <i class="nav-icon fa-solid fa-mobile"></i> <p> SalaryEntry</p> </a> </li>
                                <li class="nav-item"> <a href="/Orax/SalaryList" class="nav-link"> <i class="nav-icon fa-solid fa-mobile"></i> <p> SalaryList</p> </a> </li>
                            }
                            else
                            {
                                <li class="nav-item"> <a href="/Home/Index" class="nav-link"> <i class="nav-icon fa-solid fa-house"></i> <p> Home </p> </a> </li>
                                <li class="nav-item"> <a href="/GoodsMaster/AddGoods" class="nav-link"> <i class="nav-icon fa-solid fa-plus"></i> <p> Create Good </p> </a> </li>
                                <li class="nav-item"> <a href="/GoodsMaster/GoodsList" class="nav-link"> <i class="nav-icon fa-solid fa-list"></i> <p> Good List </p> </a> </li>
                                <li class="nav-item"> <a href="/FinalInvoice/CreateReceipt" class="nav-link"> <i class="nav-icon fa-solid fa-receipt"></i> <p> Create Receipt </p> </a> </li>
                                <li class="nav-item"> <a href="/FinalInvoice/ReceiptList" class="nav-link"> <i class="nav-icon fa-solid fa-list"></i> <p> Receipt List</p> </a> </li>
                                <li class="nav-item"> <a href="/FinalInvoice/CreateInvoice" class="nav-link"> <i class="nav-icon fa-solid fa-file-invoice"></i> <p> Create Invoice </p> </a> </li>
                                <li class="nav-item"> <a href="/FinalInvoice/InvoiceList" class="nav-link"> <i class="nav-icon fa-solid fa-rectangle-list"></i> <p> Invoice List</p> </a> </li>
                            }
                        }



                    </ul>
                </nav>
            </div>
        </aside>

        <div id="overlay">
            <div class="cv-spinner">
                <span class="spinner"></span>
            </div>
        </div>

        @RenderBody()
    </div>



    @*<script src="~/Scripts/jquery-3.6.0.js"></script>*@
    @*<script src="~/theme/bootstrap.bundle.min.js"></script>*@
    @*<script src="~/theme/bs-custom-file-input.min.js"></script>*@
    @*<script src="~/theme/adminlte.min.js"></script>*@
    @*<script src="~/theme/demo.js"></script>*@
    <link href="~/theme/fontawesome.css" rel="stylesheet" />
    <script src="~/theme/fontawesome.js"></script>
    @*<script src="~/theme/all.js"></script>*@

    <script src="~/theme/sweetalert.min.js"></script>
    @*<script>  $(function () { bsCustomFileInput.init(); }); </script>*@
</body>
</html>
