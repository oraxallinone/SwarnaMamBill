@model IEnumerable<CONSTRUCTION.Models.GoodsMaster>

@{
    ViewBag.Title = "GoodsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <div class="col-4">
                                <h3 class="card-title">Goods List</h3>
                            </div>
                            <div class="offset-10 col-2 textRight">
                                <a href="/GoodsMaster/AddGoods" class="btn btn-outline-dangerCustome1 btn-dangerCustome1 btn-xs">Add New Good</a>
                            </div>

                        </div>
                        <div>
                            <div class="card-body">

                                <div class="row">
                                    <table width="100%" class="tableCust table-hover" style="border: 1px solid #3574a4b0">
                                        <tr class="fontMenuHeader textCenter">
                                            <td style="width:5% ;text-align: center;"> Sl No </td>
                                            <td style="width:50%; text-align: left"> Goods Description </td>
                                            <td style="width:5%; text-align: left"> HSN </td>
                                            <td style="width:10% ;"> RATE </td>
                                            <td style="width:10% ;"> CGST </td>
                                            <td style="width:10% ;"> SGST </td>
                                            <td style="width:10% ;"> ACTION </td>
                                        </tr>
                                        @{
                                            int snNo = Model.Count() + 1;
                                            foreach (var itm in @Model)
                                            {
                                                snNo = snNo - 1;

                                                string bgModified = itm.isActive == true ? "" : "#f4240438";

                                                <tr class="fontMenuBody" style="border: 1px solid #3574a4b0;background-color:@bgModified">
                                                    <td class="textCenter">@snNo</td>
                                                    <td class=""> @itm.descriptionOfGoods </td>
                                                    <td class="textCenter">@itm.hsn</td>
                                                    <td class="textCenter">@itm.rate</td>
                                                    <td class="textCenter">@itm.cgst_p</td>
                                                    <td class="textCenter">@itm.sgst_p</td>
                                                    <td class="textCenter">
                                                        <a href="/GoodsMaster/ViewGoods/@itm.goodsId"> <i class="fa-solid fa-eye"></i></a>|
                                                        <a href="/GoodsMaster/EditGoods/@itm.goodsId"> <i class="fa-solid fa-pen-to-square"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


