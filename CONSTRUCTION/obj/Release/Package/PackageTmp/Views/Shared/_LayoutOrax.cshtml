<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>


    <link rel="icon" type="image/x-icon" href="~/theme/img/images.png">
    <link href="~/theme/adminlte.css" rel="stylesheet" />
    <link href="~/theme/customeCss.css" rel="stylesheet" />
    <link href="~/theme/fontawesome.css" rel="stylesheet" />
    <script src="~/theme/fontawesome.js"></script>
    @*https://fontawesome.com/search?q=graph&o=r&ic=free*@
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <link href="~/Content/application-css/loader.css" rel="stylesheet" />

 @*   <script src="~/Scripts/bootstrap.js"></script>*@


    <script src="~/theme/bootstrap.bundle.min.js"></script>
    <script src="~/theme/bs-custom-file-input.min.js"></script>
    <script src="~/theme/adminlte.min.js"></script>
    <script src="~/theme/demo.js"></script>
    @*<script src="~/theme/all.js"></script>*@
    <script src="~/theme/sweetalert.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ajaxStart(function () {
                $("#overlay").fadeIn(300);
            });
            $(document).ajaxStop(function () {
                $("#overlay").fadeOut(300);
            });


            $("#btnLogout").click(function () {
                var msg = confirm("Do you want to logout ??")
                if (msg == true) {
                    window.location.href = '/Login/Login';
                }
            });
        });
    </script>

</head>
<body class="hold-transition sidebar-mini" style="font-family:'Times New Roman';font-size:13px">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <span style="margin-left: 39%; font-size: 14px; font-weight: bolder;">@ViewBag.pageInfo</span>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="/Login/Logout">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span id="btnLogout" class="dropdown-item dropdown-header text-red">Logout</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                        </a>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        @*left side menu*@
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/Product/Index" class="brand-link">
                <img src="~/theme/img/images.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light" style="color: #d0cb7d">Orax</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        
                        <li class="nav-item"> <a href="/Orax/Graph" class="nav-link"> <i class="nav-icon fa-solid fa-chart-pie"></i> <p> &#960; Chart</p> </a> </li>
                        <li class="nav-item"> <a href="/Orax/MobileGraph" class="nav-link"> <i class="nav-icon fa-solid fa-chart-column"></i> <p>|| Chart</p> </a> </li>



                        <li class="nav-item"> <a href="/Orax/Entry" class="nav-link"> <i class="nav-icon fa-solid fa-plus"></i> <p> Entry</p> </a> </li>
                        <li class="nav-item"> <a href="/Orax/MobileEntry" class="nav-link"> <i class="nav-icon fa-solid fa-mobile-retro"></i> <p> Mobile Entry</p> </a> </li>
                        <li class="nav-item"> <a href="/Orax/MobileUpdate" class="nav-link"> <i class="nav-icon fa-solid fa-file-pen"></i> <p> Mobile Update</p> </a> </li>
                        
                        
                        
                        <li class="nav-item"> <a href="/Orax/SalaryEntry" class="nav-link"> <i class="nav-icon fa-solid fa-credit-card"></i> <p> SalaryEntry</p> </a> </li>
                        <li class="nav-item"> <a href="/Orax/SalaryList" class="nav-link"> <i class="nav-icon fa-solid fa-list"></i> <p> SalaryList</p> </a> </li>
                    
                        <li class="nav-item"> <a href="/Orax/GroupList" class="nav-link"> <i class="nav-icon fa-solid fa-list"></i> <p> Group</p> </a> </li>
                    
                    </ul>
                </nav>
            </div>
        </aside>

        <div id="overlay">
            <div class="cv-spinner">
                <span class="spinner"></span>
            </div>
        </div>

        @RenderBody()
    </div>
    <script>  $(function () { bsCustomFileInput.init(); }); </script>
</body>
</html>
