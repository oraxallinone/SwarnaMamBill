                                           {
                                               @class = "form-control form-control-sm"
                                           })
                                            </td>
                                            <td class="textCenter">
                                                <table>
                                                    <thead>
                                                        <tr>
                                                            <td><i id="iMinus" class="fa-solid fa-circle-minus" style="height:22px"></i></td>
                                                            <td><input id="goods_qty" type="text" class="form-control form-control-sm" placeholder="qty" /></td>
