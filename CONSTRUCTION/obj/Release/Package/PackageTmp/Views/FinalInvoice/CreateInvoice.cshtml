@model CONSTRUCTION.Models.CreateInvoiceViewModel

@{
    ViewBag.Title = "GstInvoiceCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    option {
        background-color: #b8d2d6;
    }

    .row {
        margin-top: -7px;
        display: -webkit-flex;
        display: -ms-flexbox;
