                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-2">
                                    <label for="serialNoOfInvoice" style="font-size:13px">SerialNo Of Invoice</label>
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.TextBoxFor(m => m.serialNoOfInvoice, new
                               {
                                   placeholder = "Invoice No",
                                   @class = "form-control form-control-sm"
                                  
                               })
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="projectManager" style="font-size:13px">Project Manager</label>
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.TextBoxFor(m => m.projectManager, new
                               {
                                   placeholder = "Project Manager",
                                   @class = "form-control form-control-sm",
                               })
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-2">
                                    <label for="panNo" style="font-size:13px">PanNo</label>

                                </div>
                                <div class="form-group col-md-4">
                                    @Html.TextBoxFor(m => m.panNo, new
                               {
                                   placeholder = "Pan Num",
                                   @class = "form-control form-control-sm",
                               })
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="projectName" style="font-size:13px">Project Name</label>
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.TextBoxFor(m => m.projectName, new
                               {
                                   placeholder = "Project Name",
                                   @class = "form-control form-control-sm",
                               })
                                </div>

                            </div>











                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label for="billTo" style="font-size:13px">Details of Receiver(Billed to):</label>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="billToGSTIN" style="font-size:13px">GSTIN/Unique ID :</label>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="shipTo" style="font-size:13px">Details of Consignee (shipped to):</label>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="shipToGSTIN" style="font-size:13px">GSTIN/Unique ID :</label>
                                </div>

                            </div>

                            <div class="row">
                                <div class="form-group col-md-3">
                                    @Html.TextAreaFor(m => m.billTo, new
                               {
                                   placeholder = "Bill To",
                                   @class = "form-control form-control-sm",
                               })
                                </div>
                                <div class="form-group col-md-3">
                                    @Html.TextBoxFor(m => m.billToGSTIN, new
                               {
                                   placeholder = "Bill To GSTIN",
                                   @class = "form-control form-control-sm",
                               })
                                </div>
                                <div class="form-group col-md-3">
                                    @Html.TextAreaFor(m => m.shipTo, new
                               {
                                   placeholder = "Ship To",
                                   @class = "form-control form-control-sm",
                               })
                                </div>
                                <div class="form-group col-md-3">
                                    @Html.TextBoxFor(m => m.shipToGSTIN, new
                               {
                                   placeholder = "Ship To GSTIN",
                                   @class = "form-control form-control-sm",
                               })
                                </div>
                            </div>


                            <div class="row">
                                <table id="tblInvoice" width="100%" class="tableCust" style="border: 1px solid #9bcad0a1">
                                    <thead>
                                        <tr class="fontMenuHeader textCenter" style="font-size: 11px;">
                                            <td style="width:4% ;text-align: center;"> SL No </td>
                                            <td style="width:29% ;"> Description Of Goods/Services </td>
                                            <td style="width:12% ;"> Qantity</td>
                                            <td style="width:8% ;"> Rate </td>
                                            <td style="width:8% ;"> Value </td>
                                            <td style="width:8% ;"> CGST%</td>
                                            <td style="width:8% ;"> CGST Amt</td>
                                            <td style="width:8% ;"> SGST%</td>
                                            <td style="width:8% ;"> SGST Amt</td>
                                            <td style="width:10% ;"> Total </td>
                                            <td style="width:5% ;">  </td>
                                        </tr>
