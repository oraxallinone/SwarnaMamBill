                                                                    <td>Details</td>
                                                                    <td><input id="inputDetails" type="text" class="form-control form-control-sm" /></td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                        <td class="col-md-1">
                                                            <input type="button" id="btnSubmit" value="Save" class="btn btn-sm btn-primary width-100" />
